{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17", //cpp version
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-Wall",
				"-g",
				//"-dynamiclib", // This is the key option to create a dynamic library
				"-I${workspaceFolder}/dependencies/include",
				"-I${workspaceFolder}/include",
				"-I/usr/local/Cellar/assimp/5.4.1/include",
				"-I${workspaceFolder}/src/projects/basic2dEngine/include",
				"-L${workspaceFolder}/dependencies/library",
				"-L/usr/local/Cellar/assimp/5.4.1/lib",
				// particle physics imports
				"${workspaceFolder}/src/projects/basic2dEngine/main.cpp",
				"${workspaceFolder}/src/projects/basic2dEngine/src/*.cpp", // main cpp file program using
				"${workspaceFolder}/src/utils/*.c",
				"${workspaceFolder}/src/utils/*.cpp", 
				"${workspaceFolder}/src/*.cpp", 
				"${workspaceFolder}/dependencies/include/stb_image/stb_image.cpp", 
				"${workspaceFolder}/dependencies/library/libglfw.3.4.dylib", 
				"-o",
				"${workspaceFolder}/app",// output file
				// "${workspaceFolder}/lib/libGraphics.dylib", // Output dynamic library
				"-framework",
				"OpenGL",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-lassimp",
				"-Wno-deprecated"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}