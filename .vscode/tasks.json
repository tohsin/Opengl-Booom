{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17", //cpp version
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-Wall",
				"-g",
				"-I${workspaceFolder}/dependencies/include",
				"-L${workspaceFolder}/dependencies/library",
				// "${workspaceFolder}/src/SetupAndInputs/*.cpp",
				//"${workspaceFolder}/src/triangle/*.cpp", // all cpp files
				"${workspaceFolder}/src/rectangle/*.cpp", // all cpp files
				"${workspaceFolder}/src/*.c", // add glad.c
				"${workspaceFolder}/dependencies/library/libglfw.3.4.dylib", 
				"-o",
				"${workspaceFolder}/app",// output file
				"-framework",
				"OpenGL",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-Wno-deprecated"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}